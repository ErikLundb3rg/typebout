// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           Int            @id @default(autoincrement())
  username     String         @unique
  password     String
  createdAt    DateTime       @default(now())
  performances Performances[]
}

model Performances {
  id           Int      @id @default(autoincrement())
  correct      Int
  mistakes     Int
  completed_in Int
  createdAt    DateTime @default(now())
  user         Users    @relation(fields: [userId], references: [id])
  userId       Int
  race         Races    @relation(fields: [raceId], references: [id])
  raceId       Int
}

model Races {
  id           Int            @id @default(autoincrement())
  createdAt    DateTime       @default(now())
  performances Performances[]
  quote        Quotes         @relation(fields: [quotesId], references: [id])
  quotesId     Int
}

model Quotes {
  id         Int          @id @default(autoincrement())
  content    String       @unique
  categories Categories[]
  author     Authors      @relation(fields: [authorId], references: [id])
  authorId   Int
  Races      Races[]
}

model Authors {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  Quotes Quotes[]
}

model Categories {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  quotes Quotes[]
}
